extends layout

block content
  div.container
    p You own #{game_count}
    ul
        each game in games
            li
                img(src="http://media.steampowered.com/steamcommunity/public/images/apps/" + game.appid + '/' + game.img_icon_url + '.jpg')
                span= game.name
                if game.has_community_visible_stats
                    a(href='http://steamcommunity.com/profiles/76561197976785222/stats/' + game.appid) View Stats